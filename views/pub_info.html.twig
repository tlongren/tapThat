
{% embed "header.html.twig" %}
{% endembed %}
<div class="jumbotron col-sm-8 col-sm-offset-4">
    <div class='row'>
        <div class="col-sm-6">
            <h1>{{ pub.getName }}</h1>
        </div>
        <div class="col-sm-4 col-sm-offset-2">
            <ul class="list-inline">
                <li>{{pub.getLocation}}</li>
                <li><a href="{{pub.getLink}}">{{pub.getLink}}</a></li>
            </ul>
        </div>
    </div>
    <div class="row">

        <div class="col-sm-12">
            <h2 class="center">Current Beers Offered</h2>
            <div>
                <table class='table table-responsive table-condensed'>
                    <thead>
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                Type
                            </th>
                            <th>
                                ABV
                            </th>
                            <th>
                                IBUs
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div class="col-sm-12 tbody">
                <table class='table table-responsive table-condensed'>
                    <tbody>
                        {% for beer in beers %}
                            <tr>
                                <td>
                                    <a href="/beer/{{beer.getId}}">{{beer.getName}}</a>
                                </td>
                                <td>
                                    {{beer.getType}}
                                </td>
                                <td>
                                    {{beer.getAbv}}%
                                </td>
                                <td>
                                    {{beer.getIbu}}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>


{% embed "footer.html.twig" %}
{% endembed %}
