{% embed "header.html.twig" %}
{% endembed %}

<div class="jumbotron col-sm-8 col-sm-offset-4">

    <form method="post" action="/public_login/{{logged_user.getId}}">
        <input id="drunk_id" type="hidden" value="{{logged_user.getId}}" name="drunk_id">
        <div class="form-group">
            <label for="beer_id">Select a Beer:</label>
            <select id="beer_id" name="beer_id" type="text" class="form-control">
                {% for beer in all_beers %}
                <option value="{{ beer.getId }}"> {{ beer.getName }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label for="pub_id">Select a Pub:</label>
            <select id="pub_id" name="pub_id" type="text" class="form-control">
                {% for pub in all_pubs %}
                <option value="{{ pub.getId }}"> {{ pub.getName }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label for="rating">Rate Beer:</label>
            <select id="rating" name="rating" type="text" class="form-control">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>
        <div class="form-group">
            <label for="date">Date:</label>
            <input id="date" name="date" type="date" class="form-control">
        </div>

        <button type="submit" class="btn btn-warning">Log Your Drank</button>

    </form>

</div>



{% embed "footer.html.twig" %}
{% endembed %}
