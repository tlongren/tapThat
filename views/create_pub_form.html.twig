<form method='post' action='/pub_login'>
    <div class='form-group'>
        <input id='name' name='name' type='text' class='form-control' placeholder='Pub name'>
    </div>
    <div class='form-group'>
        <input id='location' name='location' type='text' class='form-control' placeholder='Pub location'>
    </div>
    <div class='form-group'>
        <input id='link' name='link' type='text' class='form-control' placeholder='Pub link'>
    </div>
