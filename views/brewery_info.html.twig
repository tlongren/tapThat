{% embed "header.html.twig" %}
{% endembed %}


<div class="row jumbotron">
    <div class="col-sm-6">
        <h1>{{brewery.getName}}</h1>
        <h3>{{brewery.getLocation}}</h3>
        <h4><a href="{{brewery.getLink}}">{{brewery.getName}} Website</a></h4>
    </div>
    <div class="col-sm-6">

        <div class="table-responsive table_beers">
            <h2>Current Beers Offered</h2>
            <table class='table table-scrollable table-condensed'>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Type
                    </th>
                    <th>
                        ABV
                    </th>
                    <th>
                        IBUs
                    </th>
                </tr>
                {% for beer in beers %}
                    <tr>
                        <td>
                            {{beer.getName}}
                        </td>
                        <td>
                            {{beer.getType}}
                        </td>
                        <td>
                            {{beer.getAbv}}%
                        </td>
                        <td>
                            {{beer.getIbu}}
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>

</div>





