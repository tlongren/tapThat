{% embed "header.html.twig" %}
{% endembed %}


<div class="row jumbotron col-sm-8 col-sm-offset-4">

    <div>
        <h2>All Beers</h2>
        <div class="table-responsive">
            <table class='table table-condensed'>
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Type
                        </th>
                        <th>
                            ABV
                        </th>
                        <th>
                            IBU
                        </th>
                        <th>
                            City
                        </th>
                    </tr>
                </thead>
            </table>
        </div>
        <div class="tbody table-responsive">
            <table class='table'>
                <tbody>
                    {% for beer in beers %}
                        <tr>
                            <td>
                                <a href='/beer/{{beer.getId}}'>{{beer.getName}}</a>
                            </td>
                            <td>
                                {{beer.getType}}
                            </td>
                            <td>
                              {{beer.getAbv}}
                            </td>
                            <td>
                              {{beer.getIbu}}
                            </td>
                            <td>
                              {{beer.getRegion}}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

</div>





{% embed "footer.html.twig" %}
{% endembed %}
