{% embed "header.html.twig" %}
{% endembed %}

<div class="row jumbotron col-sm-8 col-sm-offset-4">
    <div class="row">
        <div class="col-sm-4">
            <h1>{{drunk.getName}}</h1>
        </div>
        <div class="col-sm-4 col-sm-offset-4">
            <ul class="list-unstyled">
                <li>{{drunk.getLocation}}</li>
                <li>{{drunk.getEmail}}</li>
            </ul>
        </div>
    </div>
    <div class="row">

        <div class="beers_table col-sm-12">
            <h2>Beers drunk and rated</h2>
            <a href="/add_brew"><button class="btn btn-warning">I had another beer</button></a>
            <div class="table-responsive table_beers">

                <table class='table table-scrollable table-condensed'>
                    <thead>
                        <tr>
                            <th>
                                Beer name
                            </th>
                            <th>
                                Pub name
                            </th>
                            <th>
                                Beer rating
                            </th>
                            <th>
                                Brew date
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for brew in brews %}
                            <tr>
                                <td>
                                    {{brew['beer_name']}}
                                </td>
                                <td>
                                    {{brew['pub_name']}}
                                </td>
                                <td>
                                    {{brew['beer_rating']}}/5.0
                                </td>
                                <td>
                                    {{brew['brew_date']}}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>

                </table>
            </div>
        </div>
    </div>

</div>



{% embed "footer.html.twig" %}
{% endembed %}
