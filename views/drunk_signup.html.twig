{% embed "header.html.twig" %}
{% endembed %}

<div class="jumbotron col-sm-8 col-sm-offset-4">

    <form method="post" action="/signup">
        <div class="form-group">
            <label for="name">Name:</label>
            <input id="name" name="name" type="text" placeholder="Your name" class="form-control">
        </div>
        <div class="form-group">
            <label for="date_of_birth">Date of birth:</label>
            <input id="date_of_birth" name="date_of_birth" type="date" class="form-control">
        </div>
        <div class="form-group">
            <label for="location">Location</label>
            <input id="location" name="location" type="text" placeholder="Your location" class="form-control">
        </div>


        <div class="form-group">
            <label for="login">Login Information:</label>
        </div>
        <div class="form-group">
            <label for="login">Email</label>
            <input id="email" name="email" type="text" placeholder="Your email" class="form-control">
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input id="password" name="password" type="password" placeholder="Your password" class="form-control">
        </div>
        <button type="submit" class="btn btn-default">Sign Up</button>

    </form>

</div>


