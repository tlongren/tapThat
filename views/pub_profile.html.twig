
{% embed "header.html.twig" %}
{% endembed %}


<div id= 'fix-padding' class='jumbotron col-sm-8 col-sm-offset-4'>
    <div class="row">
        <div class='col-sm-8'>
            <h1>{{pub.getName}}</h1>
        </div>
        <div class="col-sm-4">
            <ul class='list-unstyled'>
                <li>{{pub.getLocation}}</li>
                <li><a href='{{pub.getLink}}'>{{pub.getLink}}</a></li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <h2 class="center">Current Beers Offered</h2>
            <div class="table-responsive">

                <table class='table table-condensed'>
                    <thead>
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                Type
                            </th>
                            <th>
                                ABV
                            </th>
                            <th>
                                IBUs
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div class="col-sm-12 table-responsive tbody">
                <table class="table">
                    <tbody>
                        {% for beer in beers %}
                            <tr>
                                <td>
                                    <a href="/beer/{{beer.getId}}">{{beer.getName}}</a>
                                </td>
                                <td>
                                    {{beer.getType}}
                                </td>
                                <td>
                                    {{beer.getAbv}}%
                                </td>
                                <td>
                                    {{beer.getIbu}}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>

                </table>
            </div>
        </div>

    </div>
    <div class="row">

        <div class='col-sm-6 beer-search'>
            <h4>Search for a beer</h4>


            <form action='/pub/{{ pub.getId }}' method='post' autocomplete="off">
                    <div class='input-group'>
                        <input type="text" placeholder="Search" class="form-control" name="keyword" id="keyword">

                        <div id="results">
                        </div>

                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-default">Add beer</button>
                        </span>
                    </div>
            </form>
        </div>
    </div>


</div>




{% embed "footer.html.twig" %}
{% endembed %}
